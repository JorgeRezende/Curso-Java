<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/l"
	fx:controller="fxml.LoginControlador"
	styleClass="login" hgap="15" vgap="15">
	
	<padding>
		<Insets left="40" right="40"  top="40" botton="40"/>
	</padding>
	
	<columnConstraints>
		<ColumnConstraints minWidth="60" prefWidth="60"
			halignment="right"/>
		<ColumnConstraints prefWidth="200" maxWidth="Infinity"
		   hgrow="ALWAYS"/>
	</columnConstraints>

<Label text="Seja Bem Vindo"></Label>
	<Label text="Seja Bem Vindo"
		styleClass="login-titulo"
   		GridPane.column="0" GridPane.rowIndex="0"
   		GridPane.columnSpan="2" GridPane.halignment="CENTER">
   		
   		<GridPane.margin>
	   		<Insets top="20" botton="20"/>   		
   		</GridPane.margin>
   	</Label>
	
	<Label text="E-mail:"
		styleClass="login-form-label"
		GridPane.column="0" GridPane.rowIndex="1"></Label>
	<TextFild fx:id="campoEmail"
		GridPane.column="1" GridPane.rowIndex="1">>		
	</TextFild>>
	
	<Label text="Senha:"
	    styleClass="login-form-label"
		GridPane.column="0" GridPane.rowIndex="2"></Label>
	<PasswordFild fx:id="campoSenha"
		GridPane.column="1" GridPane.rowIndex="2">>		
	</PasswordFild>>

	<Button text="Entrar"
	    styleClass="login-form-botao"
		GridPane.column="0" GridPane.rowIndex="3"
		GridPane.columnSpan="2" GridPane.halignment="CENTER"
		onAction="#entrar">
		
		<GridPane.margin>
	   		<Insets top="20" botton="20"/>   		
   		</GridPane.margin>
	</Button>

</GridPane>

